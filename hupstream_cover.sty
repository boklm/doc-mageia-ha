 \noindent\hspace*{-.25in}%
 \rlap{\begin{minipage}[t][\HUP@CoverPageHeight][t]{\HUP@CoverPageWidth}%
  \parbox{\linewidth}{
  \input{\jobname.rev}
  \end{minipage}}}%
}\egroup\shipout\box254}



